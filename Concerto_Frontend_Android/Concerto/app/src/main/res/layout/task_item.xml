<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="8dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="#00ff00"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_corner"
        android:padding="0dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="26dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_task_item_title"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="标题xxxxxxxxxxx"
        android:ellipsize="end"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="33dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_task_item_processbar"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_corner"
        android:padding="0dp"
        android:text="10/11"
        android:gravity="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="85dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_task_item_tag1"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_corner"
        android:padding="0dp"
        android:text="tag1"
        android:gravity="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="85dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_task_item_tag2"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_corner"
        android:padding="0dp"
        android:text="tag2"
        android:gravity="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="85dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_task_item_timebar"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="#5DA0BD"
        android:gravity="center_vertical"
        android:text="3天"
        android:textSize="15sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="142dp" />

    <TextView
        android:id="@+id/tv_task_item_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="153dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_task_item_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李四"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="153dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>